{
  "extends": [
    "google",
    "plugin:react/recommended"
  ],
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": 0,
    "require-jsdoc": "off",
    "valid-jsdoc": "off",
    "switch-colon-spacing": 0,
    "max-len": ["error", 120],
    "indent":  ["error", 2, {"SwitchCase":1}],
    "no-invalid-this": "off",
    "object-curly-spacing": ["error", "never"]
  },
  "overrides": [
    {
      "parser": "typescript-eslint-parser",
      "parserOptions": {
        "jsx": true
      },
      "files": ["**/*.tsx", "**/*.ts"]
    }, {
      "parser": "babel-eslint",
      "files": ["**/*.jsx", "**/*.js"]
    }
  ]
}
